{
    "manifest_version": 2,
    "name": "blender",
    "version": "0.0.100",
    "description": "Mixer is the only next gen streaming service that offers viewers real-time influence and participation in live game streams.",
    "icons": {
        "48": "assets/images/blender-48.png",
        "96": "assets/images/blender-96.png",
        "128": "assets/images/blender-128.png"
    },
    "author": "Kanon Lo",
    "browser_action": {
        "default_title": "blender",
        "default_popup": "assets/views/popup.html"
    },
    "options_page": "assets/views/options.html",
    "background": {
        "scripts": ["assets/js/background.js"],
        "persistent": false
    },
    "permissions": [
        "alarms",
        "notifications",
        "storage",
        "https://*.mixer.com/",
        "https://uploads.beam.pro/"
    ]
}
